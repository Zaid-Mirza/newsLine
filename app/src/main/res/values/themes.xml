<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsLine" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->


        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewsLine.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsLine.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsLine.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CustomCardViewAppearance</item>
    </style>

    <style name="CustomCardViewAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/xx_large_margin</item>
        <item name="cornerSizeTopRight">@dimen/xx_large_margin</item>
    </style>

    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checkable">true</item>
        <item name="chipIconTint">@color/selector_chip_text_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textSize">12sp</item>
        <item name="chipStartPadding">@dimen/medium_margin</item>
        <item name="chipEndPadding">@dimen/medium_margin</item>
        <item name="closeIconVisible">false</item>
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="chipBackgroundColor">@color/selector_chip_background_color</item>
    </style>
</resources>